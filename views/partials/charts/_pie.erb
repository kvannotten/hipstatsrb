$('#<%= divId %>').highcharts({
    chart: {
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: true
    },
    title: {
        text: '<%= title %>'
    },
    tooltip: {
        pointFormat: '{series.name}: <b>{point.y}</b>',
        percentageDecimals: 1
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
                enabled: true,
                color: '#000000',
                connectorColor: '#000000',
                formatter: function() {
                    return '<b>' + this.point.name +  '</b>: ' + this.percentage.toFixed(2) + ' %';
                }
            }
        }
    },
    series: [{
        type: 'pie',
        name: '<%= subtitle %>',
        data: <%= data %>
        }]
});
